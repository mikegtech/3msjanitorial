# =============================================================================
# 3MS Janitorial Infrastructure Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Traefik Configuration
# -----------------------------------------------------------------------------
TRAEFIK_DASHBOARD_USER=admin
# Generate with: htpasswd -nb admin <password> | sed -e 's/\$/\$\$/g'
TRAEFIK_DASHBOARD_PASSWORD_HASH=

# Domain configuration
DOMAIN=3msjanitorial.com
# For local dev, use: localhost or 3msjanitorial.local

# -----------------------------------------------------------------------------
# Cloudflare Tunnel (Production)
# -----------------------------------------------------------------------------
# Tunnel token from Cloudflare Zero Trust dashboard
CLOUDFLARE_TUNNEL_TOKEN=

# -----------------------------------------------------------------------------
# PostgreSQL (already running on host - for reference)
# -----------------------------------------------------------------------------
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=3msjanitorial

# -----------------------------------------------------------------------------
# Redis (already running on host - for reference)
# -----------------------------------------------------------------------------
REDIS_HOST=host.docker.internal
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
LOKI_URL=http://loki:3100/loki/api/v1/push
# For external Loki, use the full URL

# -----------------------------------------------------------------------------
# Application Ports (internal)
# -----------------------------------------------------------------------------
WEB_PORT=3000
API_PORT=4000
AGENT_PORT=5000
